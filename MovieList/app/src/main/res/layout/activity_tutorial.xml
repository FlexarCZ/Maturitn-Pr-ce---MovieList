<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.soducius.movieList.TutorialActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@android:color/white"
        android:layout_alignParentTop="true" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutorial"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:layout_marginLeft="20dp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/tutorialLayout1"
        android:visibility="visible">

        <TextView
            android:text="On first screen of the app you will see something similiar to this:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialPage1TextView1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/tutorial_screen_1"
            android:id="@+id/tutorialPage1ImageView1"
            android:visibility="visible"
            android:layout_below="@+id/tutorialPage1TextView1"
            android:layout_marginTop="20dp"
            android:layout_height="250dp" />

        <TextView
            android:text="Here you can look at all the currently popular movies.\nBy swiping you finger from right to left you can go to a Watchlist section, where will be located all the movies you want to watch."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialPage1TextView2"
            android:layout_below="@+id/tutorialPage1ImageView1"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_navigate_tutorial_next_black_36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:id="@+id/buttonNext" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/tutorialLayout2"
        android:visibility="gone">

        <TextView
            android:text="To see details of a movie you need to tap the movie card. If you want to see even more touch the movie cell one more time.\nTo add a movie to Watchlist or Seenlist touch the buttons in the movie cell."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tutorial_screen_2"
            android:id="@+id/imageView8"
            android:adjustViewBounds="true"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp" />

        <TextView
            android:text="Adds movies to Watchlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="false"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toRightOf="@+id/imageView9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_bookmark_black_36dp"
            android:id="@+id/imageView9"
            android:layout_below="@+id/imageView8"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:text="Adds movies to Seenlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="false"
            android:layout_alignBottom="@+id/imageView10"
            android:layout_toRightOf="@+id/imageView9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_done_all_black_36dp"
            android:id="@+id/imageView10"
            android:layout_below="@+id/imageView9"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_clear_black_36dp"
            android:id="@+id/imageView11"
            android:layout_below="@+id/imageView10"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:text="Removes movies from opposite lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="false"
            android:layout_alignBottom="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gold_stripe2"
            android:id="@+id/imageView12"
            android:layout_alignLeft="@+id/imageView11"
            android:layout_alignRight="@+id/imageView11"
            android:adjustViewBounds="true"
            android:layout_below="@+id/imageView11"
            android:layout_marginTop="5dp" />

        <TextView
            android:text="Movie has more than 4 stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="false"
            android:layout_alignBottom="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView9" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_navigate_tutorial_next_black_36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:id="@+id/buttonNext2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/tutorialLayout3"
        android:visibility="gone">

        <TextView
            android:text="You can add the movie premiere to your calendar as a event by pressing the calendar button. Parameters will be automatically filled."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/tutorial_screen_3"
            android:id="@+id/imageView13"
            android:adjustViewBounds="true"
            android:layout_below="@+id/textView13"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="For better navigation in application can be used the drawer menu. It is expanded either by touching the menu button in upper left corner or by swiping from left to right."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView13"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_exit_to_app_black_36dp"
            android:id="@+id/buttonNext3"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>
